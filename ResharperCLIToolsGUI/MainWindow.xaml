<Window x:Class="ResharperCLIToolsGUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ResharperCLIToolsGUI"
        mc:Ignorable="d"
        Title="MainWindow" Height="464" Width="695">
    <DockPanel>
        <Menu DockPanel.Dock="Top" Width="Auto" Height="20">
            <MenuItem Header="File">
                <MenuItem Header="Open Solution..."/>
            </MenuItem>
        </Menu>
        <Grid Height="Auto">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150" />
                <ColumnDefinition Width="5" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0">
                File List
            </TextBlock>
            <GridSplitter Grid.Column="1" HorizontalAlignment="Stretch" />
            <TextBlock Grid.Column="2">
                File Preview
            </TextBlock>
        </Grid>
    </DockPanel>
</Window>
